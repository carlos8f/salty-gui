<h2><i class="glyphicon glyphicon-exclamation-sign"></i> Step 2</h2>

<hr>

<form class="form-horizontal" action="/import/complete" method="post">
  <div class="form-group">
    <label class="col-sm-2 control-label"><i class="glyphicon glyphicon-globe"></i> Pubkey:</label>
    <div class="col-sm-10"><code>{{pubkey.pubkey}}</code></div>
    <input name="pubkey" type="hidden" value="{{pubkey.pubkey}}">
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input"><i class="glyphicon glyphicon-user"></i> Name:</label>
    <div class="col-sm-10">
      <input name="name" type="text" class="form-control input-sm" name="input" value="{{pubkey.name}}">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="input"><i class="glyphicon glyphicon-envelope"></i> Email:</label>
    <div class="col-sm-10">
      <input name="email" type="text" class="form-control input-sm" name="input" value="{{pubkey.email}}">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i> Import</button>
    </div>
  </div>
</form>