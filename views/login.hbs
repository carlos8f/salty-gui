<form class="form-init" method="post" action="/login">
  <div class="well">
    <h2 class="form-init-heading"><i class="salty-logo"></i> {{title}}</h2>
    {{> partials/messages}}
    <label for="inputUsername"><i class="glyphicon glyphicon-user"></i> Username:</label>
    <input id="inputUsername" type="username" class="form-control" required name="username" value="{{post.username}}">
    <label for="inputPassphrase"><i class="glyphicon glyphicon-phone-alt"></i> Passphrase:</label>
    <input id="inputPassphrase" type="password" class="form-control" required name="passphrase">
    <button class="btn btn-default btn-block" type="submit"><i class="glyphicon glyphicon-ok"></i> Log in</button>
  </div>
</form>
