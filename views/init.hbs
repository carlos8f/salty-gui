<form class="form-init" method="post" action="">
  <h2 class="form-init-heading"><i class="salty-logo"></i> {{title}}</h2>
  {{> partials/messages}}
  <input type="text" class="form-control" placeholder="Choose Username" required name="username" value="{{post.username}}">
  <input type="password" class="form-control" placeholder="Create Passphrase" required name="passphrase" value="">
  <input type="password" class="form-control" placeholder="Confirm Passphrase" required name="passphrase2" value="">
  <button class="btn btn-lg btn-success btn-block" type="submit"><i class="glyphicon glyphicon-ok"></i> Create Wallet</button>

  <p class="pull-right"><small><a href="/restore"><i class="glyphicon glyphicon-floppy-open"></i> Restore from backup</a></small></p>
</form>