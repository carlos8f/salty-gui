<form class="form-init" method="post" action="">
  <div class="well">
    <h2 class="form-init-heading"><i class="salty-logo"></i> {{title}}</h2>
    <h3>Create a wallet</h3>
    {{> partials/messages}}
    <label for="inputUsername"><i class="glyphicon glyphicon-user"></i> Choose username:</label>
    <input id="inputUsername" type="text" class="form-control" required name="username" value="{{post.username}}">
    <label for="inputPassphrase"><i class="glyphicon glyphicon-phone-alt"></i> Create passphrase:</label>
    <input id="inputPassphrase" type="password" class="form-control" required name="passphrase" value="">
    <label for="inputPassphrase2"><i class="glyphicon glyphicon-repeat"></i> Confirm passphrase:</label>
    <input id="inputPassphrase2" type="password" class="form-control" required name="passphrase2" value="">
    <button class="btn btn-success btn-block" type="submit"><i class="glyphicon glyphicon-ok"></i> Create Wallet</button>
  </div>

  <p class="pull-right"><small><a href="/restore"><i class="glyphicon glyphicon-floppy-open"></i> Restore from backup</a></small></p>
</form>